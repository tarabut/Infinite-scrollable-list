<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/rb_sort_price_descending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_price_descending"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLight"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <RadioButton
            android:id="@+id/rb_sort_price_ascending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_price_ascending" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLight"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <RadioButton
            android:id="@+id/rb_sort_beds_descending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_beds_descending"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLight"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <RadioButton
            android:id="@+id/rb_sort_beds_ascending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_beds_ascending" />

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>